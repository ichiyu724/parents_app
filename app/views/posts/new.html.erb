<h3>相談を投稿する</h3>

<%= form_with model: @user do |f| %>
<table>
 <tr>
  <th><%= f.label :title ,"タイトル" %></th>
  <td><%= f.text_field :title %></td>
 </tr>
 <tr>
  <th><%= f.label :sex ,"性別" %></th>
  <td><%= f.radio_button :gender, "男" %>男の子 <%= f.radio_button :gender, "女" %>女の子</td>
 </tr>
 <tr>
  <th><%= f.label :age ,"年齢" %></th>
  <td><%= f.text_field :age %>歳</td><td><%= f.text_field :age %>ヵ月</td>
 </tr>
 <tr>
  <th><%= f.label :post ,"本文" %></th>
  <td><%= f.text_area :post %></td>
 </tr>
 <tr>
  <th><%= f.label :post_image ,"画像" %></th>
  <td><%= f.file_field :post_image %></td>
</tr>
</table>

<%= f.submit "投稿する" %>
<% end %>