<div class="container">
  <%= render partial: 'shared/page_title', locals: { page_title: "ワクチン接種日を記録する" } %>
  <%= render "shared/error", obj: @child %>

  <%= form_with model: @child, url: user_children_path do |f| %>
    <div class="text-center">
      <%= @vaccination.name %>
      <%= @vaccination.period %>
    </div>
    <table class="d-flex align-items-center justify-content-center">
      <div class="form-group">
        <tr>
          <th><%= f.label :date,"接種日", for: "vaccination_date" %><span class="text-white bg-danger border rounded fw-light p-1">必須</span></th>
          <td><%= f.date_field :date, class: "form-control", id: "vaccination_date" %>
        </tr>
      </div>
    </table>
  <%= f.hidden_field :vaccination_id, value: @vaccination.id %>
  <div class="d-flex align-items-center justify-content-center"><%= f.submit "登録する", class: "btn btn-primary my-3" %></div>
  <% end %>
</div>