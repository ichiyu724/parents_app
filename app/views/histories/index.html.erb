<div class="container">
  <div class="row">
    <%= render partial: 'shared/page_title', locals: { page_title: "ワクチン記録" } %>
    <table>
      <tbody>
        <% @vaccinations.each do |vaccination| %>
          <tr>
            <th><%= vaccination.name %></th>
            <td><%= vaccination.period %></td>
            <td><%= link_to "記録する", new_user_child_history_path(params[:child_id], user_id: current_user.id, vaccination_id: vaccination.id), class: "btn btn-primary" %></td>
          </tr>
      
      
        <% end %>
      </tbody>
    </table>






  </div>
</div>