<%= link_to "Help Parents", root_path, class: "app-name" %>
<%= link_to "about", about_path %>     
  <div class = "header-right">
    <% if user_signed_in? %>
      <div class = "username" ><%= current_user.username %></div>
       <div class = "nav-item">
          <ul class = "header-nav-menu">
            <li><%= link_to "投稿一覧", posts_path %></li>
            <li><%= link_to "新規投稿", new_post_path %></li>
            <li><%= link_to "マイページ", account_path %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: "delete" %></li> 
          </ul>
    <% else %>
          <ul>
            <li class = "guest_login" ><%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %></li>
            <li class = "sign_in" ><%= link_to "ログイン", :new_user_session, class: "btn" %></li>
            <li class = "sign_up" ><%= link_to "新規登録", :new_user_registration, class: "btn" %></li>
          </ul>
      </div>
    <% end %>
  </div>