<h1><%= @user.username %></h1>
<p><%= link_to @user.followings.count, followings_user_path(@user) %>フォロー<%= link_to @user.followers.count, followers_user_path(@user) %>フォロワー</p>
<% if @user == current_user %>
  <p>あなた。ログイン中です</p>
<% else %>
  <% if @user.is_followed_by?(current_user)%>
    <%= link_to user_relationships_path(@user), method: :delete do %>
      <button class="btn btn-danger">フォロー解除</button>
    <% end %>
  <% else %>
    <%= link_to user_relationships_path(@user), method: :post do %>
      <button class="btn btn-primary">フォロー</button>
    <% end %>
  <% end %>
<% end %>